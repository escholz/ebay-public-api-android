<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPage">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/find_product_fab"
            android:layout_width="@dimen/find_product_fab_size"
            android:layout_height="@dimen/find_product_fab_size"
            android:src="@drawable/ic_baseline_search_24px"
            android:tint="@color/buttonForegroundColor"
            app:backgroundTint="@color/buttonBackgroundColor"
            app:rippleColor="?attr/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/unit2x"
            android:layout_marginBottom="@dimen/unit2x"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>